# Connect Four Server Configuration

# Server
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/connect_four?sslmode=disable

# Kafka
KAFKA_ENABLED=true
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_EVENTS=game-events
# Optional: For Upstash/Confluent (leave empty for local Docker setup)
KAFKA_USERNAME=
KAFKA_PASSWORD=

# Game Settings
MATCHMAKING_TIMEOUT_SECONDS=10
RECONNECT_TIMEOUT_SECONDS=30
BOT_MOVE_DELAY_MS=300
